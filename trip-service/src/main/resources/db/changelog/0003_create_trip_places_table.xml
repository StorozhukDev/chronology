<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0003_create-trip-places-table" author="Storozhuk">
        <createTable tableName="trip_places">
            <column name="trip_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="place_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="trip_id, place_id" tableName="trip_places" constraintName="pk_trip_places"/>
        <addForeignKeyConstraint
                baseTableName="trip_places"
                baseColumnNames="trip_id"
                referencedTableName="trips"
                referencedColumnNames="id"
                constraintName="fk_trip_places_trips"/>
        <addForeignKeyConstraint
                baseTableName="trip_places"
                baseColumnNames="place_id"
                referencedTableName="places"
                referencedColumnNames="id"
                constraintName="fk_trip_places_places"/>
    </changeSet>
</databaseChangeLog>